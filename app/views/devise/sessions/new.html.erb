<h2 class="title">Autenticação da Plataforma</h2>
<%= render 'layouts/shared/notification' %>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="row">
    <div class="col-3">
      <div class="form-group">
        <%= f.label :username %>
        <%= f.text_field :username, class: 'form-control', autofocus: true, autocomplete: "username" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-3">
      <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password, class: 'form-control', autocomplete: "current-password" %>
      </div>
    </div>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="row">
    <div class="col-3">
      <%= f.submit "Entrar", class: 'btn btn-primary btn-block' %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
<% end %>

