<h2 class="title">Meus Diagramas de Classes</h2>
<div class="row">
  <div class="col-5">
    <button type="button" onclick="location.href='<%= new_class_diagram_diagramas_path %>';" class="btn btn-primary btn-block">Novo Diagrama</button>
  </div>
</div>

<div class="row">
  <div class="col-5">
    <fieldset class="border p-2">
      <legend>Diagramas</legend>
      <% if @diagramas.empty? %><p class="alert-item">Nenhum diagrama cadastrado.</p><% end %>
      <% if !@diagramas.empty? %>
        <% @diagramas.each do |diagrama| %>
          <table>
            <tbody>
              <tr>
                <td width="70%"><%= diagrama.nome %></td>
                <td width="15%"><%= link_to 'Editar', edit_class_diagram_diagramas_path(diagrama), class: 'btn btn-secondary btn-block' %></td>
                <td width="15%"><%= link_to 'Excluir', class_diagram_diagramas_path(diagrama), method: :delete, class: 'btn btn-secondary btn-block' %></td>
              </tr>
            </tbody>
          </table>
        <% end %>
      <% end %>
    </fieldset>
  </div>
</div>
