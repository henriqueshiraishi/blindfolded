<h2 class="title">Novo Elemento para "<%= @diagrama.nome %>"</h2>
<%= form_for @elemento, url: url do |f| %>
  <%= f.text_field :csdiag_id, value: params[:csdiag_id], class: 'd-none' %>
  <div class="row">
    <div class="col-3">
      <div class="form-group">
        <%= f.label :descricao %>
        <%= f.text_field :descricao, value: val_of(@elemento, :descricao), class: 'form-control', autofocus: true %>
      </div>
    </div>
    <div class="col-2">
      <div class="form-group">
        <%= f.label :estereotipo %>
        <%= f.text_field :estereotipo, value: val_of(@elemento, :estereotipo), class: 'form-control', autofocus: true %>
      </div>
    </div>
    <div class="col-2">
      <div class="form-group">
        <%= f.label :tipo_elemento %>
        <%= f.select :tipo_elemento, CSELEM.tipo_elementos, {include_blank: false}, {class: 'form-control'} %>
      </div>
    </div>
    <div class="col-2">
      <div class="form-group">
        <button type="submit" class="btn btn-dark btn-block" style='margin-top: 35px;' accesskey="s">Efetivar Elem.</button>
      </div>
    </div>
    <div class="col-1">
      <div class="form-group">
        <button type="button" onclick="location.href='<%= edit_use_case_diagram_diagramas_path(params[:csdiag_id]) %>';" class="btn btn-dark btn-block" style="margin-top: 35px;" accesskey="v">Voltar</button>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-9">
      <div class="form-group">
        <button type="submit" class="btn btn-dark btn-block" style='margin-top: 35px;'>Efetivar Elemento</button>
      </div>
    </div>
    <div class="col-1">
      <div class="form-group">
        <button type="button" onclick="location.href='<%= edit_use_case_diagram_diagramas_path(params[:csdiag_id]) %>';" class="btn btn-dark btn-block" style="margin-top: 35px;">Voltar</button>
      </div>
    </div>
  </div>
<% end %>
